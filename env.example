# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/baby_monitor
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUDIO_TOPIC=baby-audio-stream
KAFKA_VIDEO_TOPIC=baby-video-stream
KAFKA_ALERTS_TOPIC=baby-alerts

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET_NAME=baby-monitor-recordings

# ML Models
AUDIO_MODEL_PATH=./models/audio_classifier.onnx
VIDEO_MODEL_PATH=./models/yolo_detector.onnx

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-service-account.json

# Application
DEBUG=false
API_V1_STR=/api/v1
PROMETHEUS_PORT=8001

# Mobile App Environment Variables
API_BASE_URL=http://localhost:8000
WS_BASE_URL=ws://localhost:8000
FIREBASE_CONFIG={"apiKey":"...","authDomain":"..."}

# Development
NODE_ENV=development
EXPO_PUBLIC_API_URL=http://localhost:8000
